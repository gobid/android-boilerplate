<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.govindadasu.androidboilerplate.activity.LandingActivity">

    <com.govindadasu.androidboilerplate.view.Dashboard

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.govindadasu.androidboilerplate.view.ProfileImageView
            android:id="@+id/profileImageView"
            android:visibility="gone"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="96dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="96dp"
            android:layout_margin="15dp"
            android:src="@drawable/default_profile"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/background_light" />

        <Button
            android:drawableTop="@drawable/profile1"
            style="@style/DashboardButton"
            android:onClick="viewProfile"
            android:text="Profile" />

        <Button
            android:drawableTop="@drawable/logout"
            style="@style/DashboardButton"
            android:onClick="logoutUser"
            android:text="Logout" />

        <Button
            android:drawableTop="@drawable/menu"
            style="@style/DashboardButton"
            android:onClick="otherMenuClicked"
            android:text="Other Menu" />


        <Button
            android:drawableTop="@drawable/menu"
            style="@style/DashboardButton"
            android:onClick="otherMenuClicked"
            android:text="Other Menu" />

        <Button
            android:drawableTop="@drawable/menu"
            style="@style/DashboardButton"
            android:onClick="otherMenuClicked"
            android:text="Other Menu" />

        <Button
            android:drawableTop="@drawable/menu"
            style="@style/DashboardButton"
            android:onClick="otherMenuClicked"
            android:text="Other Menu" />


    </com.govindadasu.androidboilerplate.view.Dashboard>
</RelativeLayout>
